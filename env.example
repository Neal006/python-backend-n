# ========================================
# 8X Sports ML Backend Environment Variables
# ========================================
# Copy this file to .env and update the values as needed

# Basic Configuration
NODE_ENV=production
PORT=8000

# Model Paths
MODEL_PATH=models/deepfashion2_yolov8s-seg.pt
INDEX_PATH=index/jersey_index.faiss
METADATA_PATH=index/jersey_metadata.npy

# Device Configuration
DEVICE=cpu

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=*

# ========================================
# Render Deployment Environment Variables
# ========================================
# Add these in your Render dashboard:

# Required:
NODE_ENV=production
PORT=8000
DEVICE=cpu

# Optional (for customization):
MODEL_PATH=models/deepfashion2_yolov8s-seg.pt
INDEX_PATH=index/jersey_index.faiss
METADATA_PATH=index/jersey_metadata.npy
LOG_LEVEL=INFO
CORS_ORIGINS=*

# ========================================
# Local Development Environment Variables
# ========================================
# For local development, you can use:
# NODE_ENV=development
# PORT=8000
# DEVICE=cuda  # if you have GPU
# LOG_LEVEL=DEBUG 